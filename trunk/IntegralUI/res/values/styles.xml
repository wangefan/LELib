<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="CheckBoxStyleDark" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/main_color_grey_800</item>
    </style>
    
    <style name="CheckBoxStyle.Light" parent="@style/CheckBoxStyleDark">
        <item name="android:button">@drawable/checkbox_selector_light</item>
    </style>
	
	<style name="IntegralTheme" parent="android:Theme.Holo.Light">
	    <item name="android:actionBarStyle">@style/custom_title_background</item>
	    <item name="android:windowBackground">@color/white</item>
	    <item name="android:colorBackground">@color/white</item>
	</style>
	<style name="MyProgressDlg" parent="android:Theme.Holo.Dialog">
	    <item name="android:alertDialogStyle">@style/CustomAlertDialogStyle</item>
	    <item name="android:windowBackground">@color/transparent</item>
	    <item name="android:textColorPrimary">@color/material_grey_700</item>
	     <item name="android:backgroundDimEnabled">false</item>
	    <item name="android:textColor">@color/material_grey_700</item>
	    <item name="android:textStyle">normal</item>
	    <item name="android:textSize">20sp</item>
	</style>
	 <style name="CustomAlertDialogStyle">
		<item name="android:bottomBright">@color/transparent</item>
		<item name="android:bottomDark">@color/transparent</item>
		<item name="android:bottomMedium">@color/transparent</item>
		<item name="android:centerBright">@color/transparent</item>
		<item name="android:centerDark">@color/transparent</item>
		<item name="android:centerMedium">@color/transparent</item>
		<item name="android:fullBright">@color/transparent</item>
		<item name="android:fullDark">@color/transparent</item>
		<item name="android:topBright">@color/transparent</item>
		<item name="android:topDark">@color/transparent</item>
	</style>
</resources>
