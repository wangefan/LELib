<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lstNormalGroupLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:minHeight="64dp"
    android:orientation="horizontal"
    android:paddingLeft="10dp"
    android:paddingRight="10dp" >

    <com.UI.font.FontelloTextView
        style="@style/TextViewAppearance.Title1"
        android:id="@+id/lstGroupItemIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="8dp"
        android:text="@string/fontello_heart_empty"
        android:textColor="@color/main_color_grey_700"
        android:textSize="22sp" />
    
    <com.UI.font.RobotoTextView
        android:id="@+id/textTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:gravity="center_vertical"
        android:padding="8dp"
        android:textColor="@color/main_color_grey_700"
        android:textSize="18sp" />

     <com.UI.font.RobotoTextView
         android:id="@+id/textRespStatus"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentEnd ="true"
         android:layout_marginEnd="25dp"
         android:gravity="center_vertical"
         android:padding="8dp"
         android:textColor="@color/main_color_grey_700"
         android:textSize="18sp" />
</RelativeLayout>